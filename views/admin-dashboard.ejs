<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4 mt-10">
        <div class="flex flex-col sm:flex-row justify-between items-center mb-6 space-y-4 sm:space-y-0">
            <h1 class="text-3xl font-bold">Admin Dashboard</h1>
            <div class="flex space-x-4">
                <!-- Logout Button -->
                <a href="/admin/logout" class="inline-block px-4 py-2 bg-red-500 text-white rounded hover:bg-red-700">Logout</a>
                <!-- Return to Home Button -->
                <a href="/" class="inline-block px-4 py-2 bg-green-500 text-white rounded hover:bg-green-700">Return to Home</a>
            </div>
        </div>

        <!-- Image Upload Form -->
        <div class="flex justify-center mb-8">
            <form action="/admin/upload" method="POST" enctype="multipart/form-data" class="w-full max-w-md bg-white p-6 rounded shadow-md">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="image">Upload Art</label>
                    <input name="image" type="file" class="w-full px-3 py-2 text-gray-700 border rounded focus:outline-none focus:shadow-outline" required>
                </div>
                <button type="submit" class="w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700">Upload</button>
            </form>
        </div>

        <!-- Display Uploaded Images -->
        <div>
            <h2 class="text-2xl font-bold text-center mb-4">Uploaded Arts</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                <% images.forEach(image => { %>
                    <div class="bg-white p-4 rounded shadow-md relative">
                        <img src="<%= image %>" alt="Uploaded Image" class="w-full h-64 object-cover rounded mb-2">
                        <!-- Delete Button -->
                        <form action="/admin/delete/<%= image.split('/').pop() %>" method="POST" class="absolute top-2 right-2">
                            <button type="submit" class="px-2 py-1 bg-red-500 text-white rounded hover:bg-red-700">Delete</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>
